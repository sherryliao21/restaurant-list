<head>
  <link rel="stylesheet" href="/stylesheets/show.css">
</head>
<div class="banner"></div>
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 d-flex justify-content-center">
      <a href="/restaurants/{{ restaurant._id }}/edit">
        <button class="btn edit-btn">
          編輯
        </button>
      </a>
      <form action="/restaurants/{{ restaurant._id }}?_method=DELETE" method="POST">
        <button type="submit" id="show-btn-delete" class="btn" onclick="return confirmDelete()">刪除</button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>
      <p class="mb-5">
        {{restaurant.description}}
      </p>
      <img class="rounded mx-auto d-block mb-4 w-100" id="restaurant-img" src="{{restaurant.image}}"
        alt="{{restaurant.name}}">
    </div>
  </div>
</div>